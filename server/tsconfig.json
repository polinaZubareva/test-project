{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}